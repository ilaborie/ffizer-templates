set dotenv-load

# List all just recipes
default:
    @just --list

# Install require tools
requirements:
    rustup toolchain add nightly
    cargo install cargo-binstall
    cargo binstall cargo-watch cargo-audit cargo-deny cargo-msrv cargo-semver-checks cargo-llvm-cov
    {{#if sort_dependencies}}
    cargo binstall cargo-sort
    {{/if}}
    {{#if nextest }}
    cargo binstall cargo-nextest
    {{/if}}

# Run TDD mode
tdd:
    cargo watch -c -s "just check"

# Help of the application
help:
    cargo run --quiet -- --help

# Launch tests
test:
    @echo "ðŸ§ª Testing..."
    {{#if nextest }}
    cargo nextest run
    cargo test --doc
    {{else}}
    cargo test
    {{/if}}

# Format the code
format:
    cargo +nightly fmt
    {{#if sort_dependencies}}
    cargo sort --workspace --grouped
    {{/if}}

# Format the code
lint:
    @echo "ðŸŽ© Linting..."
    cargo check --all-features
    cargo clippy --all-features

# Check the code (formatting, lint, and tests)
check:
    @echo "ðŸ¦€ Check formatting..."
    cargo +nightly fmt --all -- --check
    {{#if sort_dependencies}}
    cargo sort --workspace --grouped --check
    {{/if}}
    @just lint
    @just test

# Audit (security issue, licences)
audit:
    @echo "ðŸš¨ Audit CVE..."
    cargo audit

    @echo "ðŸªª Check licences..."
    cargo deny check

# Detect the msrv
msrv:
    cargo msrv list
    cargo msrv

# Check the MSRV
check-msrv:
    cargo msrv verify

# Check semver
semver:
    cargo semver-checks check-release

# Build in production mode
build:
    cargo build --release

# Build the documentation
doc:
    cargo doc

# Install to the cargo bin path
install:
    cargo install --path .

# Update with template
dev-template:
    {{#if application}}
    ffizer apply --source {{ ffizer_src_uri }} --rev {{ ffizer_src_rev }} --source-subfolder rust-app --destination .
    {{else}}
    ffizer apply --source {{ ffizer_src_uri }} --rev {{ ffizer_src_rev }} --source-subfolder rust-lib --destination .
    {{/if}}